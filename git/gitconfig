[user]
    name = CÃ©dric Potterat
    email = cmdric@cern.ch

[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    ui = true
    pager = true

[color "status"]
    added = green
    changed = yellow
    untracked = red

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[alias]
    st = status
    ci = commit
    br = branch -v
    ls = "!cd ${GIT_PREFIX:-`pwd`}; printf \"# HEAD: \"; git log --oneline | head -n1; git status"
    
    #checkout
    co = checkout
    nb = checkout -b
    
    cp = cherry-pick -x

    #diff
    df = diff
    dc = diff --cached
    last = diff HEAD^
    dt = difftool

    #log
    log = log --decorate --graph --date=short
    l = log
    changes = log --pretty=format:\"%h %cr %cn %Cgreen%s%Creset\" --name-status
    short = log --pretty=format:\"%h %cr %cn %Cgreen%s%Creset\"
    changelog = log --pretty=format:\" * %s\"
    shortnocolor = log --pretty=format:\"%h %cr %cn %s\"    
    graph = log --graph --full-history --all --color --pretty=format:"%x1b[31m%h%x09%x1b[32m%d%x1b[0m%x20%s"
    tree = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit

    #remotes
    upr = remote update --prune

    master = checkout master
    rollback = reset --hard HEAD@{1}

    # fix zsh prompt
    fix = config --bool prompt.showinfo true

    # SourceTree
    sourcetree = "!open -a SourceTree ."

    # Git count lines
    inspect = "!gitinspector -Hlmr -fC,cxx,dec,cc,hh,sh,java,c,cpp,h,hpp,py,glsl,rb,js,sql"
    
[format]
    pretty = format:%C(blue)%ad%Creset %C(yellow)%h%C(green)%d%Creset %C(blue)%s %C(magenta) [%an]%Creset

[merge]
    summary = true
    verbosity = 1

[branch]
    autosetupmerge = true

[diff]
    tool = meld
    # Git diff will use (i)ndex, (w)ork tree, (c)ommit and (o)bject
    # instead of a/b/c/d as prefixes for patches
    mnemonicprefix = true

[difftool]
    prompt = false

[achievement]
    upload = false

[github]
    user = %{github username}

[core]
	editor = vi
    excludesfile = ~/.gitignore_global

[help]
	autocorrect = 5

# EOF
[push]
	default = simple
