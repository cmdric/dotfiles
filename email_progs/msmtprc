# Account
account default
host smtp.cern.ch
port 2525
auth login
user potterat
from cedric.potterat@cern.ch
passwordeval python2 -c "import keyring; print keyring.get_password('cern', 'potterat')"

# Enable TLS
tls on
tls_starttls on
tls_certcheck on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
  
# Logging
syslog LOG_MAIL
logfile /home/potterat/.msmtp/msmtp.log
